section#searchagent.searchagent
  .container
    .agent.row
      .col-xs-12.text-center.block-find
        strong.title Find an agent
      .col-md-8.col-md-offset-2
        form#search-agency.form-search-agency(name='search-agency', method='get', action='http://www.foyer.lu/en/insurance-agents', target='_blank')
          .row
            .col-sm-8.text-center.frm-input
              .form-group
                label.search-q(for='search-q') Enter town, postcode or agent
                input#search-q.input-search.form-control.input-lg(name='search', type='text')
                input(name='force_version', type='hidden', value='1')
            .col-sm-4.text-center
              button.btn-go(type='submit') GO


